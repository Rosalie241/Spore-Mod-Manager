<Application x:Class="SporeMods.Setup.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:SporeMods.Setup"
             xmlns:coll="clr-namespace:System.Collections.Generic;assembly=System.Runtime">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Locale/en-ca.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Locale/es-es.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Locale/ca-ca.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="{x:Type Window}" TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Ubuntu"/>
            </Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
