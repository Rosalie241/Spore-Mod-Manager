<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:cui="clr-namespace:SporeMods.CommonUI;assembly=SporeMods.CommonUI"
		xmlns:core="clr-namespace:SporeMods.Core;assembly=SporeMods.Core"
		xmlns:local="clr-namespace:SporeMods.Manager"
		xmlns:v="clr-namespace:SporeMods.Manager.Views">
	<Style Selector="v|ModManagerView Border.modalTest[IsVisible=True] ContentControl">
		<Setter Property="RenderTransform" Value="scale(1)"/>
		<Style.Animations>
			<Animation Duration="0:0:0.5">
				<KeyFrame Cue="0%">
					<Setter Property="ScaleTransform.ScaleX" Value="0.5"/>
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="ScaleTransform.ScaleX" Value="1"/>
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>
</Styles>